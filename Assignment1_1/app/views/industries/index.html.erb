<div class = "container-fluid">
  <p style="color: green"><%= notice %></p>
  <h1 align="center">Industries</h1>
  <div style="margin-left:20px">
    <%= link_to "Add New Industry", new_industry_path, class: "btn btn-primary" %>
  </div>
  <% @industries.each do |industry| %>
    <div class="d-flex flex-row flex-wrap">
      <div class="card  bg-light mb-3" style="width: 18rem;border-radius: 5%;margin:20px">
        <div class="card-body">
          <p class="card-text">  
            <%= render industry %>
          </p>
          <%= link_to "Show this industry", industry,class: "btn-sm btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
</div>
